clear;
x = [2 1 1 2 2 1 1 2 1 2 2 1 1 2 1];
z = 0*x;

y = reshape([z;x],1,[])

figure(1);clf;
imagesc(y);
axis equal
axis tight
% axis off
c1 = [0.9290    0.6940    0.1250];
c2 = [0.8500    0.3250    0.0980];
c3 = [0    0.4470    0.7410];
colormap([c1 ; c2 ; c3]);
set(gca, 'YTick',[]);
vals = (1:length(y))
set(gca,'XTick',linspace(,length(vals),length(vals)/2));
set(gca,'xticklabel',(sprintf('%.f\n',4.1*(vals))));
xlabel('time (seconds)');
set(gca,'fontsize',14);